        <button type="button" class="btn btn-outline" onclick="closeModal('modal-saida')">Cancelar</button>
        <button type="button" class="btn" onclick="salvarSaida()">üíæ Salvar</button>
      </div>
    </div>
  </div>
</div>

<script>
// DATA STORE
let estoque = JSON.parse(localStorage.getItem('atelie_estoque') || '[]');
let saidas = JSON.parse(localStorage.getItem('atelie_saidas') || '[]');

function save() {
  localStorage.setItem('atelie_estoque', JSON.stringify(estoque));
  localStorage.setItem('atelie_saidas', JSON.stringify(saidas));
}

// NAV
function showPage(name, el) {
  document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
  document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));
  
  const page = document.getElementById('page-' + name);
  if (page) page.classList.add('active');
  
  if(el) {
    el.classList.add('active');
  } else {
    const navItem = document.querySelector(`.nav-item[data-target="${name}"]`);
    if(navItem) navItem.classList.add('active');
  }

  localStorage.setItem('atelie_aba_atual', name);

  if (name === 'estoque') renderEstoque();
  if (name === 'saidas') renderSaidas();
  if (name === 'financeiro') renderFinanceiro();
  if (name === 'dashboard') renderDash();
}

// MODAL
function openModal(id) {
  if (id === 'modal-saida') populateSaidaSelect();
  document.getElementById(id).classList.add('open');
}
function closeModal(id) {
  document.getElementById(id).classList.remove('open');
  if (id === 'modal-item') resetItemForm();
  if (id === 'modal-saida') resetSaidaForm();
}

// ---- ESTOQUE ----
function salvarItem(manterAberto = false) {
  const nome = document.getElementById('item-nome').value.trim();
  const tamanho = document.getElementById('item-tamanho').value;
  const qtd = parseInt(document.getElementById('item-qtd').value) || 0;
  const preco = parseFloat(document.getElementById('item-preco').value) || 0;
  const cor = document.getElementById('item-cor').value.trim();
  const sku = document.getElementById('item-sku').value.trim();
  const editId = document.getElementById('item-edit-id').value;

  if (!nome || !tamanho) { alert('Preencha Nome e Tamanho!'); return; }

  if (editId) {
    const idx = estoque.findIndex(i => i.id == editId);
    if (idx > -1) estoque[idx] = { ...estoque[idx], nome, tamanho, qtd, preco, cor, sku };
  } else {
    estoque.push({ id: Date.now(), nome, tamanho, qtd, preco, cor, sku });
  }
  
  save();
  renderEstoque();
  renderDash();
  
  if (manterAberto) {
    resetItemForm();
    document.getElementById('item-nome').focus(); 
  } else {
    closeModal('modal-item');
  }
}

function renderEstoque() {
  const tbody = document.getElementById('estoque-body');
  if (!estoque.length) {
    tbody.innerHTML = '<tr><td colspan="5"><div class="empty"><div class="empty-icon">üëô</div><p>Nenhum item cadastrado ainda. Clique em "Novo Item"!</p></div></td></tr>';
    return;
  }
  const sizeBadge = { PP:'badge-pp', P:'badge-p', M:'badge-m', G:'badge-g', GG:'badge-gg', √önico:'badge-u' };
  tbody.innerHTML = estoque.map(i => `
    <tr>
      <td><strong>${i.nome}</strong>${i.cor ? `<br><small style="color:var(--gray)">${i.cor}</small>` : ''}${i.sku ? `<br><small style="color:var(--gray)">${i.sku}</small>` : ''}</td>
      <td><span class="badge ${sizeBadge[i.tamanho]||'badge-u'}">${i.tamanho}</span></td>
      <td><span style="font-weight:700;color:${i.qtd<=3?'#e63946':'var(--green)'}">${i.qtd}</span>${i.qtd<=3?'<span style="font-size:11px;color:#e63946;margin-left:5px;">‚ö†Ô∏è Baixo</span>':''}</td>
      <td>${i.preco ? 'R$ '+i.preco.toFixed(2) : '-'}</td>
      <td>
        <button type="button" class="btn btn-sm btn-outline" onclick="editItem(${i.id})">‚úèÔ∏è</button>
        <button type="button" class="btn btn-sm btn-danger" style="margin-left:5px;" onclick="deleteItem(${i.id})">üóëÔ∏è</button>
      </td>
    </tr>
  `).join('');
}

function editItem(id) {
  const i = estoque.find(x => x.id == id);
  if (!i) return;
  document.getElementById('item-nome').value = i.nome;
  document.getElementById('item-tamanho').value = i.tamanho;
  document.getElementById('item-qtd').value = i.qtd;
  document.getElementById('item-preco').value = i.preco;
  document.getElementById('item-cor').value = i.cor || '';
  document.getElementById('item-sku').value = i.sku || '';
  document.getElementById('item-edit-id').value = i.id;
  openModal('modal-item');
}

function deleteItem(id) {
  // BUGFIX 3: Verifica se o item possui hist√≥rico antes de deletar
  const temSaida = saidas.some(s => s.itemId == id);
  if (temSaida) {
    alert('Erro: Este item j√° possui sa√≠das registradas. Para delet√°-lo, voc√™ precisa excluir o hist√≥rico de vendas dele primeiro.');
    return;
  }

  if (!confirm('Deletar item?')) return;
  estoque = estoque.filter(i => i.id != id);
  save(); renderEstoque(); renderDash();
}

function resetItemForm() {
  ['item-nome','item-tamanho','item-qtd','item-preco','item-cor','item-sku','item-edit-id'].forEach(id => document.getElementById(id).value = '');
}

// ---- SAIDAS ----
function populateSaidaSelect() {
  const sel = document.getElementById('saida-item');
  sel.innerHTML = '<option value="">Selecione um item</option>' +
    estoque.map(i => `<option value="${i.id}" data-preco="${i.preco}">${i.nome} - ${i.tamanho}</option>`).join('');
}

function autoPreco() {
  const sel = document.getElementById('saida-item');
  const opt = sel.options[sel.selectedIndex];
  if (opt && opt.dataset.preco) document.getElementById('saida-valor').value = opt.dataset.preco;
}

function salvarSaida() {
  const data = document.getElementById('saida-data').value;
  const itemId = document.getElementById('saida-item').value;
  const qtd = parseInt(document.getElementById('saida-qtd').value) || 1;
  const dev = parseInt(document.getElementById('saida-dev').value) || 0;
  const valor = parseFloat(document.getElementById('saida-valor').value) || 0;
  const pedido = document.getElementById('saida-pedido').value.trim();
  const editId = document.getElementById('saida-edit-id').value;

  if (!data || !itemId) { alert('Preencha Data e Item!'); return; }
  
  // BUGFIX 1: Valida√ß√£o de devolu√ß√£o absurda
  if (dev > qtd) {
    alert('Erro: A quantidade devolvida n√£o pode ser maior que a quantidade entregue.');
    return;
  }

  const item = estoque.find(i => i.id == itemId);

  if (editId) {
    const idx = saidas.findIndex(s => s.id == editId);
    if (idx > -1) {
      const oldSaida = saidas[idx];
      const oldItem = estoque.find(i => i.id == oldSaida.itemId);
      if (oldItem) oldItem.qtd += (oldSaida.qtd - oldSaida.dev);
      
      if (item) item.qtd = Math.max(0, item.qtd - (qtd - dev));
      
      saidas[idx] = { ...saidas[idx], data, itemId, itemNome: item?.nome, itemTamanho: item?.tamanho, qtd, dev, valor, pedido };
    }
  } else {
    saidas.push({ id: Date.now(), data, itemId, itemNome: item?.nome, itemTamanho: item?.tamanho, qtd, dev, valor, pedido });
    if (item) { item.qtd = Math.max(0, item.qtd - (qtd - dev)); }
  }
  
  save();
  renderSaidas();
  renderDash();
  closeModal('modal-saida');
}

function editSaida(id) {
  const s = saidas.find(x => x.id == id);
  if (!s) return;
  populateSaidaSelect();
  document.getElementById('saida-data').value = s.data;
  document.getElementById('saida-item').value = s.itemId;
  document.getElementById('saida-qtd').value = s.qtd;
  document.getElementById('saida-dev').value = s.dev;
  document.getElementById('saida-valor').value = s.valor;
  document.getElementById('saida-pedido').value = s.pedido || '';
  document.getElementById('saida-edit-id').value = s.id;
  openModal('modal-saida');
}

function getFiltredSaidas() {
  let list = [...saidas];
  const ini = document.getElementById('filter-inicio')?.value;
  const fim = document.getElementById('filter-fim')?.value;
  if (ini) list = list.filter(s => s.data >= ini);
  if (fim) list = list.filter(s => s.data <= fim);
  return list.sort((a,b) => b.data.localeCompare(a.data));
}

function renderSaidas() {
  const tbody = document.getElementById('saidas-body');
  const list = getFiltredSaidas();
  if (!list.length) {
    tbody.innerHTML = '<tr><td colspan="7"><div class="empty"><div class="empty-icon">üì¶</div><p>Nenhuma sa√≠da para os filtros selecionados.</p></div></td></tr>';
    document.getElementById('saidas-resumo').innerHTML = '';
    return;
  }

  const totalPedidos = list.reduce((s,x) => s + x.qtd, 0);
  const totalDev = list.reduce((s,x) => s + x.dev, 0);

  document.getElementById('saidas-resumo').innerHTML = `
    <div style="background:var(--green-pale);border-radius:8px;padding:10px 16px;font-size:13px;">
      <strong style="color:var(--green)">üì¶ ${list.length} registros</strong>
    </div>
    <div style="background:var(--green-pale);border-radius:8px;padding:10px 16px;font-size:13px;">
      <strong style="color:var(--green)">‚úÖ ${totalPedidos} entregas</strong>
    </div>
    <div style="background:#fee2e2;border-radius:8px;padding:10px 16px;font-size:13px;">
      <strong style="color:#991b1b">‚Ü©Ô∏è ${totalDev} devolu√ß√µes</strong>
    </div>
  `;

  tbody.innerHTML = list.map(s => `
    <tr>
      <td>${formatDate(s.data)}</td>
      <td>${s.itemNome || '-'}</td>
      <td>${s.itemTamanho || '-'}</td>
      <td style="font-weight:700;color:var(--green)">${s.qtd}</td>
      <td>${s.dev > 0 ? `<span class="badge badge-dev">‚Ü©Ô∏è ${s.dev}</span>` : '<span class="badge badge-ok">0</span>'}</td>
      <td>R$ ${s.valor.toFixed(2)}</td>
      <td>
        <button type="button" class="btn btn-sm btn-outline" onclick="editSaida(${s.id})">‚úèÔ∏è</button>
        <button type="button" class="btn btn-sm btn-danger" style="margin-left:5px;" onclick="deleteSaida(${s.id})">üóëÔ∏è</button>
      </td>
    </tr>
  `).join('');
}

function deleteSaida(id) {
  if (!confirm('Deletar esta sa√≠da? O estoque do item ser√° restaurado.')) return;
  const s = saidas.find(x => x.id == id);
  if (s) {
      const item = estoque.find(i => i.id == s.itemId);
      if (item) item.qtd += (s.qtd - s.dev);
  }
  saidas = saidas.filter(x => x.id != id);
  save(); renderSaidas(); renderDash();
}

function resetSaidaForm() {
  ['saida-data','saida-item','saida-qtd','saida-dev','saida-valor','saida-pedido','saida-edit-id'].forEach(id => {
    const el = document.getElementById(id);
    if (el) el.value = '';
  });
  document.getElementById('saida-qtd').value = 1;
  document.getElementById('saida-dev').value = 0;
}

function limparSelectsEFiltrar() {
  document.getElementById('filter-mes').value = '';
  document.getElementById('filter-ano').value = '';
  renderSaidas();
}

function aplicarFiltroMes() {
  const mes = document.getElementById('filter-mes').value;
  let ano = document.getElementById('filter-ano').value;
  
  // BUGFIX 4: For√ßar ano atual se o usu√°rio escolher apenas o m√™s
  if (mes && !ano) {
    ano = new Date().getFullYear().toString();
    document.getElementById('filter-ano').value = ano;
  }

  if (ano) {
    if (mes) {
      document.getElementById('filter-inicio').value = `${ano}-${mes}-01`;
      const lastDay = new Date(ano, mes, 0).getDate();
      document.getElementById('filter-fim').value = `${ano}-${mes}-${lastDay}`;
    } else {
      document.getElementById('filter-inicio').value = `${ano}-01-01`;
      document.getElementById('filter-fim').value = `${ano}-12-31`;
    }
  } else {
    if (!mes) {
       document.getElementById('filter-inicio').value = '';
       document.getElementById('filter-fim').value = '';
    }
  }
  renderSaidas();
}

function limparFiltros() {
  document.getElementById('filter-inicio').value = '';
  document.getElementById('filter-fim').value = '';
  document.getElementById('filter-mes').value = '';
  document.getElementById('filter-ano').value = '';
  renderSaidas();
}

// ---- FINANCEIRO ----
function renderFinanceiro() {
  const mes = document.getElementById('fin-mes').value;
  const ano = document.getElementById('fin-ano').value;

  let list = [...saidas];
  
  // BUGFIX 2: Filtro financeiro agora funciona independentemente (M√™s+Ano, S√≥ Ano, ou S√≥ M√™s)
  if (mes && ano) {
    list = list.filter(s => s.data.startsWith(`${ano}-${mes}`));
  } else if (ano) {
    list = list.filter(s => s.data.startsWith(ano));
  } else if (mes) {
    list = list.filter(s => s.data.substring(5, 7) === mes);
  }

  const bruta = list.reduce((s,x) => s + (x.valor * x.qtd), 0);
  const devVal = list.reduce((s,x) => s + (x.valor * x.dev), 0);
  const liquida = bruta - devVal;

  document.getElementById('fin-bruta').textContent = 'R$ ' + bruta.toFixed(2);
  document.getElementById('fin-dev').textContent = 'R$ ' + devVal.toFixed(2);
  document.getElementById('fin-liquida').textContent = 'R$ ' + liquida.toFixed(2);

  const map = {};
  list.forEach(s => {
    const key = `${s.itemId}`;
    if (!map[key]) map[key] = { nome: s.itemNome, tam: s.itemTamanho, qtd: 0, dev: 0, val: 0 };
    map[key].qtd += s.qtd;
    map[key].dev += s.dev;
    map[key].val += s.valor * s.qtd;
  });

  const tbody = document.getElementById('fin-body');
  const rows = Object.values(map);
  if (!rows.length) {
    tbody.innerHTML = '<tr><td colspan="5"><div class="empty"><p>Nenhum dado para o per√≠odo.</p></div></td></tr>';
  } else {
    tbody.innerHTML = rows.map(r => `
      <tr>
        <td>${r.nome}</td>
        <td>${r.tam}</td>
        <td style="font-weight:700;color:var(--green)">${r.qtd}</td>
        <td style="color:#e63946">${r.dev}</td>
        <td style="font-weight:700">R$ ${r.val.toFixed(2)}</td>
      </tr>
    `).join('');
  }
}

// ---- DASHBOARD ----
function renderDash() {
  document.getElementById('dash-total-itens').textContent = estoque.length;
  const totalPed = saidas.reduce((s,x) => s + x.qtd, 0);
  const totalDev = saidas.reduce((s,x) => s + x.dev, 0);
  const totalVal = saidas.reduce((s,x) => s + (x.valor * x.qtd), 0);
  document.getElementById('dash-total-pedidos').textContent = totalPed;
  document.getElementById('dash-total-dev').textContent = totalDev;
  document.getElementById('dash-receita').textContent = 'R$' + totalVal.toFixed(0);

  const low = estoque.filter(i => i.qtd <= 3);
  const cont = document.getElementById('dash-low-stock');
  if (!low.length) {
    cont.innerHTML = '<div class="empty"><div class="empty-icon">‚úÖ</div><p>Nenhum item com estoque cr√≠tico</p></div>';
  } else {
    const sizeBadge = { PP:'badge-pp', P:'badge-p', M:'badge-m', G:'badge-g', GG:'badge-gg', √önico:'badge-u' };
    cont.innerHTML = `<div style="display:flex;flex-wrap:wrap;gap:10px;">${low.map(i=>`
      <div style="background:#fff5f5;border:1px solid #fecaca;border-radius:10px;padding:12px 16px;min-width:180px;">
        <div style="font-weight:700;color:#1a2e23">${i.nome}</div>
        <div style="margin-top:4px"><span class="badge ${sizeBadge[i.tamanho]||'badge-u'}">${i.tamanho}</span></div>
        <div style="margin-top:6px;font-size:13px;color:#e63946;font-weight:700">‚ö†Ô∏è ${i.qtd} restantes</div>
      </div>
    `).join('')}</div>`;
  }
}

function formatDate(d) {
  if (!d) return '-';
  const [y,m,day] = d.split('-');
  return `${day}/${m}/${y}`;
}

// INIT 
renderDash(); 
const abaSalva = localStorage.getItem('atelie_aba_atual') || 'dashboard';
showPage(abaSalva);

</script>
</body>
</html>
